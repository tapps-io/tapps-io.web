{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach web - debugging in chrome",
      "url": "http://localhost:3002*",
      "webRoot": "${workspaceFolder}/src",
      "port": 9222,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach server - debugging server",
      "port": 9229,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start server - debugging server",
      "protocol": "inspector",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "args": ["-x", ".js,.jsx,.ts,.tsx", "src/server.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build - debugging build steps",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js"
      //"args": ["-w"]
    }
  ]
}
